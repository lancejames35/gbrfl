<!-- Bulk Operation Modal -->
<div class="modal fade" id="bulkOperationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Bulk Operations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Operation Type</label>
                    <select class="form-select">
                        <option>Update Player Positions</option>
                        <option>Recalculate Team Stats</option>
                        <option>Reset Waiver Priorities</option>
                        <option>Clear Draft Results</option>
                        <option>Archive Season Data</option>
                    </select>
                </div>
                <div class="alert alert-warning">
                    <i class="bi bi-exclamation-triangle me-2"></i>
                    Bulk operations may take several minutes to complete and cannot be undone.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary">Execute Operation</button>
            </div>
        </div>
    </div>
</div>