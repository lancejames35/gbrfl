<!-- Page Header -->
<div class="row align-items-center mb-4">
    <div class="col-md-8">
        <h1 class="mb-0">Import/Export Tools</h1>
        <p class="text-muted">Manage data import and export operations</p>
    </div>
    <div class="col-md-4 text-md-end">
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#bulkOperationModal">
            <i class="bi bi-lightning"></i> Bulk Operations
        </button>
    </div>
</div>

<!-- Quick Stats -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-upload display-4 text-primary"></i>
                <h5 class="card-title mt-3">Last Import</h5>
                <p class="text-primary mb-0">2 days ago</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-download display-4 text-success"></i>
                <h5 class="card-title mt-3">Last Export</h5>
                <p class="text-success mb-0">5 hours ago</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-database display-4 text-info"></i>
                <h5 class="card-title mt-3">Total Players</h5>
                <h3 class="text-info">2,847</h3>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-exclamation-triangle display-4 text-warning"></i>
                <h5 class="card-title mt-3">Validation Errors</h5>
                <h3 class="text-warning">0</h3>
            </div>
        </div>
    </div>
</div>

<!-- Import Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-upload me-2"></i>Data Import
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>NFL Player Data</h6>
                <p class="text-muted">Import player information, stats, and roster updates</p>
                <form enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">CSV File</label>
                        <input type="file" class="form-control" accept=".csv" required>
                        <div class="form-text">
                            <a href="/templates/players_template.csv" class="text-decoration-none">
                                <i class="bi bi-download me-1"></i>Download template
                            </a>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="validateOnly">
                            <label class="form-check-label" for="validateOnly">
                                Validate only (don't import)
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="updateExisting">
                            <label class="form-check-label" for="updateExisting">
                                Update existing players
                            </label>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Import Players
                    </button>
                </form>
            </div>
            <div class="col-md-6">
                <h6>Team Rosters</h6>
                <p class="text-muted">Import fantasy team roster assignments</p>
                <form enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-label">CSV File</label>
                        <input type="file" class="form-control" accept=".csv" required>
                        <div class="form-text">
                            <a href="/templates/rosters_template.csv" class="text-decoration-none">
                                <i class="bi bi-download me-1"></i>Download template
                            </a>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Import Mode</label>
                        <select class="form-select">
                            <option value="append">Add to existing rosters</option>
                            <option value="replace">Replace all rosters</option>
                            <option value="merge">Merge with existing</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-upload"></i> Import Rosters
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Export Section -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-download me-2"></i>Data Export
        </h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <h6>League Data</h6>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-download me-2"></i>Export All Players
                    </button>
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-download me-2"></i>Export Team Rosters
                    </button>
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-download me-2"></i>Export Draft Results
                    </button>
                    <button class="btn btn-outline-primary">
                        <i class="bi bi-download me-2"></i>Export Keeper Selections
                    </button>
                </div>
            </div>
            <div class="col-md-6">
                <h6>Reports & Analytics</h6>
                <div class="d-grid gap-2">
                    <button class="btn btn-outline-success">
                        <i class="bi bi-download me-2"></i>Trade History Report
                    </button>
                    <button class="btn btn-outline-success">
                        <i class="bi bi-download me-2"></i>Activity Log Report
                    </button>
                    <button class="btn btn-outline-success">
                        <i class="bi bi-download me-2"></i>User Statistics Report
                    </button>
                    <button class="btn btn-outline-success">
                        <i class="bi bi-download me-2"></i>League Summary Report
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Backup & Restore -->
<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">
            <i class="bi bi-shield-check me-2"></i>Backup & Restore
        </h5>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <strong>Warning:</strong> Backup and restore operations affect the entire database. Use with caution.
        </div>
        <div class="row">
            <div class="col-md-6">
                <h6>Create Backup</h6>
                <p class="text-muted">Generate a complete backup of all league data</p>
                <div class="mb-3">
                    <label class="form-label">Backup Name</label>
                    <input type="text" class="form-control" placeholder="backup_2024_10_15" value="backup_<%= new Date().toISOString().split('T')[0].replace(/-/g, '_') %>">
                </div>
                <button class="btn btn-warning">
                    <i class="bi bi-archive"></i> Create Backup
                </button>
            </div>
            <div class="col-md-6">
                <h6>Restore from Backup</h6>
                <p class="text-muted">Restore league data from a previous backup</p>
                <div class="mb-3">
                    <label class="form-label">Backup File</label>
                    <input type="file" class="form-control" accept=".sql,.zip">
                </div>
                <button class="btn btn-danger">
                    <i class="bi bi-arrow-clockwise"></i> Restore Backup
                </button>
            </div>
        </div>
    </div>
</div>

