<!-- Page Header -->
<div class="row align-items-center mb-4">
    <div class="col-md-8">
        <h1 class="mb-0">Manage Standings</h1>
        <p class="text-muted mb-0">Manually adjust team standings for the 2025 season</p>
    </div>
    <div class="col-md-4 text-end">
        <a href="/standings" class="btn btn-outline-primary">
            <i class="bi bi-eye me-2"></i>View Public Standings
        </a>
    </div>
</div>

<!-- Standings Management Form -->
<div class="card">
    <div class="card-header bg-light">
        <h5 class="mb-0">Current Standings</h5>
    </div>
    <div class="card-body">
        <form id="standings-form" method="POST" action="/admin/standings/update">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 5%;"></th>
                            <th style="width: 25%;">Team</th>
                            <th style="width: 15%;" class="text-center">Wins</th>
                            <th style="width: 15%;" class="text-center">Losses</th>
                            <th style="width: 20%;" class="text-center">Points Differential</th>
                            <th style="width: 20%;" class="text-center">Games Behind</th>
                        </tr>
                    </thead>
                    <tbody id="standings-tbody">
                        <% standings.forEach((team, index) => { %>
                            <tr data-team-id="<%= team.fantasy_team_id %>">
                                <td class="text-center">
                                    <i class="bi bi-grip-vertical drag-handle" style="cursor: grab;"></i>
                                </td>
                                <td>
                                    <div class="fw-bold"><%= team.team_name %></div>
                                    <small class="text-muted"><%= team.first_name %> <%= team.last_name %></small>
                                    <input type="hidden" name="teams[<%= index %>][fantasy_team_id]" value="<%= team.fantasy_team_id %>">
                                    <input type="hidden" name="teams[<%= index %>][position]" value="<%= team.position || index + 1 %>">
                                </td>
                                <td>
                                    <input type="number" 
                                           class="form-control text-center" 
                                           name="teams[<%= index %>][wins]" 
                                           value="<%= team.wins %>" 
                                           min="0" 
                                           max="17"
                                           required>
                                </td>
                                <td>
                                    <input type="number" 
                                           class="form-control text-center" 
                                           name="teams[<%= index %>][losses]" 
                                           value="<%= team.losses %>" 
                                           min="0" 
                                           max="17"
                                           required>
                                </td>
                                <td>
                                    <input type="number" 
                                           class="form-control text-center" 
                                           name="teams[<%= index %>][points_differential]" 
                                           value="<%= team.points_differential %>" 
                                           step="1"
                                           required>
                                </td>
                                <td>
                                    <input type="number" 
                                           class="form-control text-center" 
                                           name="teams[<%= index %>][games_behind]" 
                                           value="<%= team.games_behind %>" 
                                           min="0" 
                                           max="17"
                                           step="1"
                                           required>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            
            <div class="d-flex justify-content-between align-items-center mt-4">
                <div>
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Changes will be visible immediately on the public standings page
                    </small>
                </div>
                <div>
                    <button type="button" class="btn btn-secondary me-2" onclick="resetForm()">
                        Reset Changes
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-2"></i>Update Standings
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Quick Actions -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0">Quick Actions</h6>
            </div>
            <div class="card-body">
                <button type="button" class="btn btn-outline-warning btn-sm me-2" onclick="resetSeason()">
                    Reset All to 0-0
                </button>
                <button type="button" class="btn btn-outline-info btn-sm" onclick="calculateGamesEhind()">
                    Auto-Calculate Games Behind
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
<script>
// Store original values for reset functionality
const originalData = <%- JSON.stringify(standings) %>;

// Initialize drag and drop
const tbody = document.getElementById('standings-tbody');
const sortable = Sortable.create(tbody, {
    handle: '.drag-handle',
    animation: 150,
    onEnd: function(evt) {
        updatePositions();
    }
});

function updatePositions() {
    const rows = document.querySelectorAll('#standings-tbody tr');
    rows.forEach((row, index) => {
        const positionInput = row.querySelector('input[name*="[position]"]');
        if (positionInput) {
            positionInput.value = index + 1;
        }
        
        // Update all input names to match new order
        const inputs = row.querySelectorAll('input[name^="teams["]');
        inputs.forEach(input => {
            const nameAttr = input.getAttribute('name');
            const newName = nameAttr.replace(/teams\[\d+\]/, `teams[${index}]`);
            input.setAttribute('name', newName);
        });
    });
}

function resetForm() {
    if (confirm('Reset all changes to the last saved values?')) {
        originalData.forEach((team, index) => {
            document.querySelector(`input[name="teams[${index}][wins]"]`).value = team.wins;
            document.querySelector(`input[name="teams[${index}][losses]"]`).value = team.losses;
            document.querySelector(`input[name="teams[${index}][points_differential]"]`).value = team.points_differential;
            document.querySelector(`input[name="teams[${index}][games_behind]"]`).value = team.games_behind;
        });
    }
}

function resetSeason() {
    if (confirm('Reset all teams to 0 wins, 0 losses? This will clear all current standings data.')) {
        originalData.forEach((team, index) => {
            document.querySelector(`input[name="teams[${index}][wins]"]`).value = 0;
            document.querySelector(`input[name="teams[${index}][losses]"]`).value = 0;
            document.querySelector(`input[name="teams[${index}][points_differential]"]`).value = 0;
            document.querySelector(`input[name="teams[${index}][games_behind]"]`).value = 0;
        });
    }
}

function calculateGamesEhind() {
    // Get all teams' data
    const teams = [];
    originalData.forEach((team, index) => {
        const wins = parseInt(document.querySelector(`input[name="teams[${index}][wins]"]`).value);
        const losses = parseInt(document.querySelector(`input[name="teams[${index}][losses]"]`).value);
        teams.push({ index, wins, losses, winPct: wins / (wins + losses || 1) });
    });
    
    // Sort by wins descending, then by win percentage
    teams.sort((a, b) => {
        if (b.wins !== a.wins) return b.wins - a.wins;
        return b.winPct - a.winPct;
    });
    
    // Calculate games behind leader
    const leaderWins = teams[0].wins;
    const leaderLosses = teams[0].losses;
    
    teams.forEach(team => {
        const gamesBehind = Math.round(((leaderWins - team.wins) + (team.losses - leaderLosses)) / 2);
        document.querySelector(`input[name="teams[${team.index}][games_behind]"]`).value = Math.max(0, gamesBehind);
    });
}

// Form submission handler
document.getElementById('standings-form').addEventListener('submit', function(e) {
    if (!confirm('Update the league standings with these values?')) {
        e.preventDefault();
    }
});
</script>

<style>
.table input.form-control {
    border: 1px solid #dee2e6;
    border-radius: 0.375rem;
}

.table input.form-control:focus {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
}

.table tbody tr:hover {
    background-color: rgba(0, 123, 255, 0.05);
}
</style>