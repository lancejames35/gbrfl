<!-- Admin Dashboard Cards -->
<div class="row">
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">NFL Players</h5>
                    </div>
                    <div class="card-body">
                        <p>Manage NFL players in the system.</p>
                        <div class="d-grid gap-2">
                            <a href="/admin/players" class="btn btn-outline-primary">
                                <i class="bi bi-people"></i> Manage Players
                            </a>
                            <a href="/admin/players/upload" class="btn btn-outline-success">
                                <i class="bi bi-upload"></i> Upload Players CSV
                            </a>
                            <a href="/admin/players/add" class="btn btn-outline-secondary">
                                <i class="bi bi-person-plus"></i> Add New Player
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">User Management</h5>
                    </div>
                    <div class="card-body">
                        <p>Manage users and permissions.</p>
                        <div class="d-grid gap-2">
                            <a href="/admin/users" class="btn btn-outline-primary">
                                <i class="bi bi-people"></i> Manage Users
                            </a>
                            <a href="/admin/users/add" class="btn btn-outline-secondary">
                                <i class="bi bi-person-plus"></i> Add New User
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">System Settings</h5>
                    </div>
                    <div class="card-body">
                        <p>Configure system settings and manage league options.</p>
                        <div class="d-grid gap-2">
                            <a href="/admin/settings" class="btn btn-outline-primary">
                                <i class="bi bi-gear"></i> League Settings
                            </a>
                            <a href="/admin/logs" class="btn btn-outline-secondary">
                                <i class="bi bi-list-check"></i> Activity Logs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>