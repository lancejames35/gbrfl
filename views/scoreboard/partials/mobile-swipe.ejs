                  <small><i class="fas fa-trophy"></i> <%= game.team1.name %> Wins</small>
                <% } else if (game.team2.categories.receiving.winner) { %>
                  <small><i class="fas fa-trophy"></i> <%= game.team2.name %> Wins</small>
                <% } %>
              </div>
              <i class="fas fa-chevron-down expand-icon"></i>
            </div>
          </div>
        </div>
        
        <div class="category-content" id="mobile-receiving-content">
          <div class="card-body">
            <!-- Quick Stats Comparison -->
            <div class="quick-stats mb-3">
              <div class="row text-center">
                <div class="col-6">
                  <strong class="text-primary"><%= game.team1.name.split(' ')[0] %>:</strong><br>
                  <small>
                    Yards: <%= game.team1.categories.receiving.stats.yards %> | 
                    TDs: <%= game.team1.categories.receiving.stats.tds %> | 
                    Rec: <%= game.team1.categories.receiving.stats.receptions %>
                  </small>
                </div>
                <div class="col-6">
                  <strong class="text-secondary"><%= game.team2.name.split(' ')[0] %>:</strong><br>
                  <small>
                    Yards: <%= game.team2.categories.receiving.stats.yards %> | 
                    TDs: <%= game.team2.categories.receiving.stats.tds %> | 
                    Rec: <%= game.team2.categories.receiving.stats.receptions %>
                  </small>
                </div>
              </div>
            </div>
            
            <!-- Player Details Button -->
            <div class="text-center">
              <button class="btn btn-outline-success btn-sm" onclick="showMobilePlayerDetails('receiving')">
                <i class="fas fa-users"></i> Show Player Details
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- KICKING Category -->
    <div class="mobile-category-card mb-3" data-category="kicking">
      <div class="card">
        <div class="category-header bg-info text-white" onclick="toggleMobileCategory('kicking')">
          <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
              <div>
                <h6 class="mb-0">
                  <i class="fas fa-bullseye me-2"></i>KICKING (6 pts)
                </h6>
                <% if (game.team1.categories.kicking.winner) { %>
                  <small><i class="fas fa-trophy"></i> <%= game.team1.name %> Wins</small>
                <% } else if (game.team2.categories.kicking.winner) { %>
