                <% } %>
              </div>
              <i class="fas fa-chevron-down expand-icon"></i>
            </div>
          </div>
        </div>
        
        <div class="category-content" id="mobile-defense-content">
          <div class="card-body">
            <!-- Quick Stats Comparison -->
            <div class="quick-stats mb-3">
              <div class="row text-center">
                <div class="col-6">
                  <strong class="text-primary"><%= game.team1.name.split(' ')[0] %>:</strong><br>
                  <small>
                    Pts Allow: <%= game.team1.categories.defense.stats.points_allowed %> | 
                    Yds Allow: <%= game.team1.categories.defense.stats.yards_allowed %> | 
                    Sacks: <%= game.team1.categories.defense.stats.sacks %>
                  </small>
                </div>
                <div class="col-6">
                  <strong class="text-secondary"><%= game.team2.name.split(' ')[0] %>:</strong><br>
                  <small>
                    Pts Allow: <%= game.team2.categories.defense.stats.points_allowed %> | 
