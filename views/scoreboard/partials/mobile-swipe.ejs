  </div>
</div>

<!-- Mobile Player Details Modal -->
<div class="modal fade" id="mobilePlayerModal" tabindex="-1">
  <div class="modal-dialog modal-fullscreen-sm-down">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="mobilePlayerModalTitle">Player Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body" id="mobilePlayerModalBody">
        <!-- Player details will be dynamically loaded here -->
      </div>
    </div>
  </div>
</div>

